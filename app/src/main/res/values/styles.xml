<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="KongTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/KongTheme.ActionBar</item>
        <item name="actionBarStyle">@style/KongTheme.ActionBar</item>
    </style>

    <style name="KongTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/action_bar_background</item>
        <item name="background">@color/action_bar_background</item>
        <item name="android:titleTextStyle">@style/KongTheme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/KongTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="KongTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NavDrawerItem">
        <item name="android:padding">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/nav_drawer_item</item>
    </style>
    
    <style name="PostUsername">
        <item name="android:textColor">@color/primary_text_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/post_username_size</item>
    </style>

</resources>
